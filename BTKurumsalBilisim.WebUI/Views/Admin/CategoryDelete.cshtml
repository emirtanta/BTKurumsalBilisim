@model BTKurumsalBilisim.Entity.Category

@{
    ViewData["Title"] = $"{Model.Name}";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}



<h3> @Model.Name adlı kategoriyi silme istediğinize emin misiniz?</h3>
<div>
    <h4>@ViewBag.Title</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>
    
    <form asp-action="CategoryDelete">
        <input type="submit" value="Sil" class="btn btn-info" /> |
        <a asp-controller="Admin" asp-action="CategoryList" class="btn btn-danger">İptal</a>
    </form>
</div>
