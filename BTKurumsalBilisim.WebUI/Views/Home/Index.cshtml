@model FilmListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@* kategoriler gelicek *@
<div class="row">
    <div class="col-md-3">
        @*@await Component.InvokeAsync("CategoryList")*@

        @* arama bölümü *@
        <partial name="_Search"></partial>
    </div>
    <div class="col-md-9">
        @* ürünler gelicel *@
        <div class="row">

            @foreach (var film in Model.Films)
            {

                <div class="col-md-4">
                    <partial name="_Film" for="@film"></partial>
                </div>
            }

        </div>
    </div>


</div>






