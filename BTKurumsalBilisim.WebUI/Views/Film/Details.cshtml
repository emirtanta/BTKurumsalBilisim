@model FilmDetailModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                @*<img src="~/img/@Model.Film.ImageUrl" class="im-fluid">*@
                <img src="~/img/images.jpg" class="img-fluid" />
            </div>
            <div class="col-md-9">

                <h1 class="md-3">@Model.Film.Name</h1> <hr>

                <p class="p-3">
                    <b>Türü:</b>
                    @foreach (var item in Model.Categories)
                    {
                        <a href="#">@item.Name</a>
                    
                        @*<a asp-controller="#" asp-action="#"  asp-route-category="#" class="btn btn-link p-0 mb-3">@item.Name</a>*@
                    }
                </p>

                <p class="p-3"><b>Oyuncular:</b> @Model.Film.PlayerDescription</p>

                <div class="mb-3">
                    


                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            
            <p class="p-3"><b>Film Konusu</b></p>
            <p class="p-3">@Model.Film.Description</p>
        </div>

    </div>
</div>

