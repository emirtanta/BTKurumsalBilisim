@model FilmListModel
@{
    ViewData["Title"] = "Filmler Listesi";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="row">
    <div class="col-md-12">
        <hr>
        <a href="/Admin/FilmCreate" class="btn btn-primary btn-sm">Film Ekle</a>

        <p></p>

        <table class="table table-bordered table-responsive table-striped table-hover">
            <thead>
                <tr>
                    <td style="width: 30px;">#</td>
                    <td></td>
                    <td style="width: 30px;">Film Adı</td>
                    <td>Anasayfa</td>
                    <td>Onaylı</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>

                @if (Model.Films.Count > 0)
                {
                    @foreach (var item in Model.Films)
                    {
                        <tr>
                            <td>@item.FilmId</td>
                            <td>
                                <img src="~/img/images.jpg" />
                            </td>
                            <td>@item.Name</td>
                            <td>
                                @if (item.IsHome)
                                {
                                    <i class="fas fa-check-circle"></i>

                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>

                            <td>
                                @if (item.IsApproved)
                                {
                                    <i class="fas fa-check-circle"></i>

                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i>
                                }
                            </td>

                            <td>
                                <a href="/Admin/FilmEdit/@item.FilmId" class="btn btn-primary btn-sm mr-2">Düzenle</a>

                                <form action="/Admin/FilmDelete" method="POST" style="display: inline;">
                                    <input type="hidden" name="filmId" value="@item.FilmId">

                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Kayıt Yok</h3>
                    </div>
                }

            </tbody>
        </table>

    </div>
</div>

